<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChArUcoボード設定"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Dictionary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辞書タイプ" />

        <Spinner
            android:id="@+id/spinnerDictionary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Squares X -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X方向マス数" />

        <EditText
            android:id="@+id/etSquaresX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Squares Y -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y方向マス数" />

        <EditText
            android:id="@+id/etSquaresY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Square Length -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="マスのサイズ (メートル)" />

        <EditText
            android:id="@+id/etSquareLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Marker Length -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="マーカーサイズ (メートル)" />

        <EditText
            android:id="@+id/etMarkerLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Min Calibration Frames -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最小キャリブレーションフレーム数" />

        <EditText
            android:id="@+id/etMinFrames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="24dp" />

        <!-- Camera Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="カメラ設定"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Resolution -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解像度" />

        <Spinner
            android:id="@+id/spinnerResolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Save Path -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存先フォルダ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCurrentPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="現在のパス: (デフォルト)"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSelectFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="フォルダを選択"
            android:layout_marginBottom="24dp" />

        <!-- Transform Configuration Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="対象物変換設定"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ボードから対象物への相対位置・姿勢を設定"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTransformEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="変換機能を有効にする"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/layoutTransformParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Translation Offset -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置オフセット (メートル)"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X軸オフセット" />

            <EditText
                android:id="@+id/etTransformX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:hint="0.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y軸オフセット" />

            <EditText
                android:id="@+id/etTransformY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:hint="0.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z軸オフセット" />

            <EditText
                android:id="@+id/etTransformZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:hint="0.0"
                android:layout_marginBottom="16dp" />

            <!-- Rotation Offset -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回転オフセット (度)"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll (X軸回転)" />

            <EditText
                android:id="@+id/etTransformRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:hint="0.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pitch (Y軸回転)" />

            <EditText
                android:id="@+id/etTransformPitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:hint="0.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yaw (Z軸回転)" />

            <EditText
                android:id="@+id/etTransformYaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:hint="0.0"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存" />

    </LinearLayout>
</ScrollView>
